<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <StackLayout class="p-6">
        <Label text="Welcome Back" class="text-3xl font-bold text-center mb-8" />
        <TextField hint="Email" text="{{ email }}" keyboardType="email" class="p-4 bg-gray-100 rounded-lg mb-4" />
        <TextField hint="Password" text="{{ password }}" secure="true" class="p-4 bg-gray-100 rounded-lg mb-6" />
        <Button text="Sign In" tap="{{ onSignIn }}" class="bg-purple-600 text-white p-4 rounded-lg mb-4" />
        <Button text="Continue with Google" tap="{{ onGoogleSignIn }}" class="bg-white border-gray-300 border p-4 rounded-lg" />
        <Label text="Don't have an account?" tap="{{ onRegister }}" class="text-center mt-4 text-purple-600" />
    </StackLayout>
</Page>